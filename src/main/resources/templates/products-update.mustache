{{>layout/header}}
<h1>게시글 수정</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="p_id">글 번호</label>
                <input type="text" class="form-control" id="p_id" value="{{product.p_id}}" readonly>
            </div>
            <div class="form-group">
                <label for="p_name">제목</label>
                <input type="text" class="form-control" id="p_name" value="{{product.p_name}}">
            </div>
            <div class="form-group">
                <label for="p_price">작성자</label>
                <input type="text" class="form-control" id="p_price" value="{{product.p_price}}">
            </div>
            <div class="form-group">
                <label for="p_desc">내용</label>
                <input type="text" class="form-control" id="p_desc" value="{{product.p_desc}}">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>
{{>layout/footer}}